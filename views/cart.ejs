<% layout('layouts/boilerplate') %>
    <h1>Cart</h1>
    <% for (let cartItem of individualItems) { %>
        <div class="card mb-3">
            <div class="row">
                <div class="col-md-4">
                    <img src="<%= cartItem.image %> " alt="" class="img-fluid">
                </div>
                <div class="col-md-8">
                    <div class="card-body">
                        <div class="card-title">
                            <%= cartItem.title %>
                        </div>
                        <h3>
                            $<%= cartItem.price %>
                        </h3>
                        <% totalPrice +=cartItem.price %>
                    </div>
                </div>
            </div>
        </div>
        <% } %>
            <h1 class="mb-4">Total: $<%= totalPrice%>
            </h1> <a href="/purchase" class="btn btn-info mb-3">Submit Order</a>